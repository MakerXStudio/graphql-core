{
  "name": "@makerxstudio/graphql-core",
  "version": "0.3.1",
  "private": false,
  "description": "A set of core GraphQL utilities that MakerX uses to build GraphQL APIs",
  "author": "MakerX",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "engines": {
    "node": ">=16.0"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:0-clean": "rimraf dist coverage",
    "build:1-compile": "tsc -p tsconfig.build.json",
    "build:2-copy-pkg-json": "npx --yes @makerx/ts-toolkit@latest copy-package-json",
    "test": "jest --coverage --passWithNoTests",
    "lint": "eslint ./src/ --ext .ts",
    "lint:fix": "eslint ./src/ --ext .ts --fix",
    "check-types": "tsc --noEmit",
    "audit": "npm audit"
  },
  "dependencies": {
    "@makerxstudio/node-common": "^0.1.0",
    "lodash.omitby": "^4.6.0",
    "lodash.pick": "^4.4.0"
  },
  "peerDependencies": {
    "@apollo/client": "3",
    "express": "*",
    "graphql": "*"
  },
  "devDependencies": {
    "@apollo/client": "^3.6.9",
    "@tsconfig/node16": "^1.0.3",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.2",
    "@types/lodash.omitby": "^4.6.7",
    "@types/lodash.pick": "^4.4.7",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "node-fetch": "^2.6.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
